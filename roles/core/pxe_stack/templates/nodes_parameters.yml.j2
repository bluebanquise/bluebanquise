{% set range = (current_iceberg|string) %}
{% else %}
{% set range = 'all' %}
{% endif %}

{% for host in groups[range] %}
{{host}}:
  equipment_profile: "{{ hostvars[host]['group_names'] | select('match','^'+equipment_naming+'_.*') | list | unique | sort | first | join | replace('equipment_','') | trim }}"
{% endfor %}

