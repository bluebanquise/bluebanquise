body {
  margin: 0;
  font-family: "OpenSans","Helvetica Neue",Helvetica,Arial,sans-serif;
}

ul.lvl1 {
    margin: 0.75em 0;
    padding: 0 3em;
    list-style: none;
}
ul.lvl1 li:before { 
    content:        "";
    border-color:   transparent #108bde;
    border-style:   solid;
    border-width:   0.35em 0 0.35em 0.45em;
    display:        block;
    height:         0;
    left:           -1em;
    position:       relative;
    top:            1em;
    width:          0;
#    transform: rotate(45deg);
}

ul.lvl1 li.rotate:before {
    transform: rotate(45deg);
    left:           -0.9em;
}

ul.lvl2 {
    margin: 0 0;
    padding: 0 1em;
    list-style: none;
}
ul.lvl2 li:before {
    content:        "";
    border-color:   transparent #efad21;
    border-style:   solid;
    border-width:   0.30em 0 0.30em 0.40em;
    display:        block;
    height:         0;
    left:           -1em;
    position:       relative;
    top:            1em;
    width:          0;
#    transform: rotate(45deg);
}

ul.lvl2 li.rotate:before {
    transform: rotate(45deg);
    left:           -0.9em;
}

