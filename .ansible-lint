# warn_list:
verbosity: 1
skip_list:
  - role-name  # Role name {0} does not match ``^[a-z][a-z0-9_]+$`` pattern
  - no-changed-when
  - no-jinja-when
  - fqcn-builtins
  - jinja[spacing]
  - name[casing]
  - name[template]
  - yaml[octal-values]
  - galaxy[no-changelog]
  - galaxy[no-runtime]
exclude_paths:
  - infrastructure/roles/powerman/tasks/main.yml # bb_nodes_profiles :/
  - infrastructure/roles/pxe_stack/tasks/main.yml # bb_nodes_profiles :/
  - infrastructure/roles/slurm/tasks/main.yml # bb_nodes_profiles :/